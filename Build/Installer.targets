			<MergeModules Include="$(OutputDirForConfig)\PyScript*"/>
			<MergeModules Include="$(OutputDirForConfig)\Python*"/>     <!-- REVIEW (Hasso) 2018.04: not sure if this is files or a folder -->
			<MergeModules Include="$(OutputDirForConfig)\Python\**\*"/> <!-- REVIEW (Hasso) 2018.04: not sure if this is files or a folder -->
