			<DeveloperFiles Include="$(fwrt)\DistFiles\Helps\Using_Styles.chm"/> <!-- TE-specific per LT-18363 -->
			<DeveloperFiles Include="$(fwrt)\DistFiles\Helps\Translation Editor\**\*"/>
